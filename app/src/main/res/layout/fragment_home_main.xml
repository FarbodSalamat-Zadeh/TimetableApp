<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingTop="@dimen/content_vertical_padding"
    android:paddingBottom="@dimen/fab_padding"
    android:paddingLeft="@dimen/content_lateral_padding"
    android:paddingRight="@dimen/content_lateral_padding">

    <LinearLayout
        android:id="@+id/section_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</android.support.v4.widget.NestedScrollView>
