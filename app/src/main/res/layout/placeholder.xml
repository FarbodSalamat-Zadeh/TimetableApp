<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        app:srcCompat="@drawable/ic_class_black_24dp"
        android:contentDescription="@null"
        android:layout_width="72dp"
        android:layout_height="72dp" />

    <TextView
        android:id="@+id/title"
        tools:text="Short text"
        android:textSize="22sp"
        android:textColor="@color/mdu_text_black_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/mdu_padding_normal"
        android:paddingBottom="@dimen/mdu_spacing_normal"
        android:paddingRight="@dimen/mdu_padding_normal"
        android:paddingLeft="@dimen/mdu_padding_normal"
        android:maxWidth="272dp" />

    <TextView
        android:id="@+id/subtitle"
        tools:text="Longer placeholder description"
        android:textSize="16sp"
        android:textColor="@color/mdu_text_black_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxWidth="256dp" />

</LinearLayout>
