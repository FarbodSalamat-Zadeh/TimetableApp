<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?selectableItemBackground"
    android:background="@color/mdu_white"
    android:transitionName="@string/transition_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/list_item_elevation">

    <include layout="@layout/divider" />

    <View
        android:id="@+id/color"
        android:background="@color/mdu_red_500"
        android:layout_width="@dimen/subject_color_strip_width"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/mdu_keyline_1"
        android:paddingRight="@dimen/mdu_keyline_1"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/subject"
            tools:text="Computer Science"
            android:textColor="@color/mdu_text_black"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/class_details"
            tools:text="10:15 - 11:15 on Wednesday Week A \n13:10 - 15:10 on Thursday"
            android:textColor="@color/mdu_text_black_secondary"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"/>
    </LinearLayout>

</FrameLayout>
