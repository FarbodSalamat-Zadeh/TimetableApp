<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Widget.Timetable.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.AppBarLayout>

    <com.satsuware.usefulviews.LabelledSpinner
        android:id="@+id/spinner_subject"
        android:hint="@string/property_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mdu_padding_normal"/>

    <include layout="@layout/divider" />

    <android.support.design.widget.TextInputLayout
        android:hint="@string/property_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mdu_padding_normal">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText_room"
            android:inputType="textShortMessage"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:hint="@string/property_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mdu_padding_normal">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText_teacher"
            android:inputType="textShortMessage"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <include layout="@layout/divider" />

</LinearLayout>
