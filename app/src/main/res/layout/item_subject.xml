<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:foreground="?selectableItemBackground"
    android:background="@color/mdu_white"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:elevation="@dimen/list_item_elevation">

    <include layout="@layout/divider" />

    <View
        android:id="@+id/color"
        android:background="@color/mdu_red_500"
        android:layout_width="@dimen/subject_color_strip_width"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/name"
        android:text="Subject"
        android:textColor="@color/mdu_text_black"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/mdu_keyline_1"
        android:paddingRight="@dimen/mdu_keyline_1" />

</FrameLayout>
