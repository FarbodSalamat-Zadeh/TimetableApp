<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Timetable.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:text="Agenda"
            android:textColor="@color/mdu_text_white"
            android:textSize="22sp"
            android:background="@color/mdu_light_blue_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding"/>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/mdu_spacing_normal"
            android:paddingBottom="@dimen/mdu_spacing_normal" />

        <include layout="@layout/divider" />

        <LinearLayout
            android:id="@+id/bottom_bar"
            android:orientation="horizontal"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/mdu_spacing_normal"
            android:paddingRight="@dimen/mdu_spacing_normal">
            <ImageView
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:tint="@color/mdu_grey_500"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/mdu_spacing_normal"/>
            <TextView
                android:id="@+id/forward"
                android:text="View full agenda"
                android:textColor="@color/mdu_text_black_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/mdu_spacing_normal"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
