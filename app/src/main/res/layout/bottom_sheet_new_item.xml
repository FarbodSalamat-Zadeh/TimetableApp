<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <FrameLayout
        android:id="@+id/frameLayout_assignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:srcCompat="@drawable/ic_homework_black_24dp"
            android:tint="@color/mdu_text_black_secondary"
            style="@style/Widget.Timetable.ItemIcon" />

        <TextView
            android:text="@string/title_activity_assignment_new"
            android:textColor="@color/mdu_text_black_secondary"
            style="@style/Widget.Timetable.TextView.Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mdu_keyline_2"
            android:layout_marginRight="@dimen/mdu_keyline_1" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:srcCompat="@drawable/ic_assessment_black_24dp"
            android:tint="@color/mdu_text_black_secondary"
            style="@style/Widget.Timetable.ItemIcon" />

        <TextView
            android:text="@string/title_activity_exam_new"
            android:textColor="@color/mdu_text_black_secondary"
            style="@style/Widget.Timetable.TextView.Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mdu_keyline_2"
            android:layout_marginRight="@dimen/mdu_keyline_1" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:srcCompat="@drawable/ic_event_black_24dp"
            android:tint="@color/mdu_text_black_secondary"
            style="@style/Widget.Timetable.ItemIcon" />

        <TextView
            android:text="@string/title_activity_event_new"
            android:textColor="@color/mdu_text_black_secondary"
            style="@style/Widget.Timetable.TextView.Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mdu_keyline_2"
            android:layout_marginRight="@dimen/mdu_keyline_1" />
    </FrameLayout>
</LinearLayout>
