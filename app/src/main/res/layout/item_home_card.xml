<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?selectableItemBackground"
    android:background="@color/mdu_white"
    android:transitionName="@string/transition_1"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:layout_marginBottom="@dimen/classes_home_card_spacing">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/color"
            tools:background="@color/mdu_red_500"
            android:layout_width="@dimen/subject_color_strip_width"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/times"
            tools:text="09:00\n10:00"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/mdu_text_black"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/mdu_keyline_1"
            android:paddingRight="@dimen/mdu_keyline_1" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/mdu_keyline_2"
            android:paddingRight="@dimen/mdu_keyline_2">

            <TextView
                android:id="@+id/title"
                tools:text="Computer Science"
                android:textSize="16sp"
                android:textColor="@color/mdu_text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/subtitle"
                tools:text="S114 \u2022 Mr Crosby"
                android:textSize="14sp"
                android:textColor="@color/mdu_text_black_secondary"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/assignment_text"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="0 out of 1"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:textColor="?colorAccent"
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/rounded_corner"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mdu_padding_normal" />
    </FrameLayout>
</android.support.v7.widget.CardView>
