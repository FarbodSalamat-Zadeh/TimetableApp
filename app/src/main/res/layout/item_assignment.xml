<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?selectableItemBackground"
    android:background="@color/mdu_white"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <View
        android:id="@+id/color"
        android:background="@color/mdu_blue_500"
        android:layout_width="@dimen/subject_color_strip_width"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mdu_padding_normal">

        <TextView
            android:id="@+id/title"
            android:text="Title"
            android:textColor="@color/mdu_text_black"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail"
            android:text="Some detail stuff"
            android:textColor="@color/mdu_text_black_secondary"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
