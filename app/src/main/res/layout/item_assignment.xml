<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?selectableItemBackground"
    android:background="@color/mdu_white"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <View
        android:id="@+id/color"
        android:background="@color/mdu_blue_500"
        android:layout_width="@dimen/subject_color_strip_width"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/mdu_padding_normal">

        <TextView
            android:id="@+id/title"
            android:text="Title"
            android:textColor="@color/mdu_text_black"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subject"
            android:text="Some detail stuff"
            android:textColor="@color/mdu_text_black_secondary"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title" />

        <TextView
            android:id="@+id/due_date"
            android:text="20 Aug"
            android:textColor="@color/mdu_text_black_secondary"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/completion_progress"
            android:text="55%"
            android:textColor="@color/mdu_text_black_secondary"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/due_date"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"/>
    </RelativeLayout>

</FrameLayout>
