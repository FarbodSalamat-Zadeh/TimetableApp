<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <!-- focusableInTouchMode prevents the EditText from gaining focus on startup -->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Widget.Timetable.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:transitionName="@string/transition_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_vertical_padding"
        android:layout_marginLeft="@dimen/content_lateral_padding"
        android:layout_marginRight="@dimen/content_lateral_padding">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/mdu_padding_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mdu_spacing_normal">
                <TextView
                    android:id="@+id/textView_subject"
                    android:text="@string/property_subject"
                    style="@style/Widget.Timetable.TextView.Item.Selectable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="130dp"
                    android:paddingLeft="@dimen/mdu_padding_normal"
                    android:paddingRight="@dimen/mdu_padding_normal" />
                <android.support.design.widget.TextInputLayout
                    android:hint="@string/property_module"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText_module"
                        android:inputType="textShortMessage"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <include layout="@layout/divider" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:srcCompat="@drawable/ic_event_black_24dp"
                    style="@style/Widget.Timetable.ItemIcon" />
                <TextView
                    android:id="@+id/textView_date"
                    android:text="@string/property_exam_date"
                    style="@style/Widget.Timetable.TextView.Item.Selectable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mdu_keyline_2"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:srcCompat="@drawable/ic_access_time_black_24dp"
                    style="@style/Widget.Timetable.ItemIcon" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mdu_keyline_2">
                    <TextView
                        android:id="@+id/textView_start_time"
                        android:text="@string/property_start_time"
                        style="@style/Widget.Timetable.TextView.Item.Selectable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/textView_duration"
                        android:text="@string/property_duration"
                        style="@style/Widget.Timetable.TextView.Item.Selectable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </FrameLayout>

            <include layout="@layout/divider" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:srcCompat="@drawable/ic_event_seat_black_24dp"
                    style="@style/Widget.Timetable.ItemIcon" />
                <android.support.design.widget.TextInputLayout
                    android:hint="@string/property_seat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mdu_keyline_2">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText_seat"
                        android:inputType="textShortMessage"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:srcCompat="@drawable/ic_room_black_24dp"
                    style="@style/Widget.Timetable.ItemIcon" />
                <android.support.design.widget.TextInputLayout
                    android:hint="@string/property_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mdu_keyline_2">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText_room"
                        android:inputType="textShortMessage"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>
            </FrameLayout>

            <include layout="@layout/divider" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:srcCompat="@drawable/ic_restore_page_black_24dp"
                    style="@style/Widget.Timetable.ItemIcon" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mdu_keyline_2">
                    <TextView
                        android:text="@string/property_resit"
                        android:textColor="@color/mdu_text_black"
                        style="@style/Widget.Timetable.TextView.Item.Selectable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/mdu_padding_normal"/>
                    <CheckBox
                        android:id="@+id/checkBox_resit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
