<resources>

    <style name="Timetable" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Timetable.LightAccent">
        <item name="colorAccent">@color/mdu_text_white_secondary</item>
    </style>

    <style name="Timetable.TranslucentStatus">
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Timetable.EditItem">
        <item name="colorPrimary">@color/mdu_grey_100</item>
        <item name="colorPrimaryDark">@color/mdu_grey_300</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Widget.Timetable.FabMenu">
        <item name="menu_colorNormal">@color/theme_accent</item>
        <item name="menu_colorPressed">@color/theme_accent_highlight</item>
    </style>

    <style name="Widget.Timetable.Fab">
        <item name="fab_colorNormal">@color/theme_accent</item>
        <item name="fab_colorPressed">@color/theme_accent_highlight</item>
    </style>

    <style name="Widget.Timetable.Fab.Mini">
        <item name="fab_size">mini</item>
    </style>

    <style name="Widget.Timetable" parent="android:Widget" />

    <style name="Widget.Timetable.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.Timetable.Toolbar.Extended">
        <item name="android:layout_marginLeft">@dimen/mdu_keyline_2_minus_16dp</item>
        <item name="android:layout_marginRight">@dimen/mdu_keyline_1</item>
        <item name="android:paddingTop">@dimen/mdu_padding_normal</item>
        <item name="android:paddingBottom">@dimen/mdu_padding_normal</item>
    </style>

    <style name="Widget.Timetable.Toolbar.Light">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="Widget.Timetable.TabLayout.NonCaps" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Timetable.TabLayout.NonCaps</item>
    </style>

    <style name="TextAppearance.Timetable.TabLayout.NonCaps" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Timetable.Button" parent="Widget.AppCompat.Button.Borderless" />

    <style name="Widget.Timetable.Button.Light">
        <item name="android:textColor">@color/mdu_text_white</item>
    </style>

    <style name="Widget.Timetable.CardView" parent="CardView.Light">
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.Timetable.ItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/mdu_keyline_1</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="Widget.Timetable.EditText" />

    <style name="Widget.Timetable.EditText.Item">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">@dimen/mdu_padding_normal</item>
        <item name="android:paddingBottom">@dimen/mdu_padding_normal</item>
    </style>

    <style name="Widget.Timetable.TextView" />

    <style name="Widget.Timetable.TextView.Item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mdu_text_black</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/mdu_padding_normal</item>
        <item name="android:paddingBottom">@dimen/mdu_padding_normal</item>
    </style>

    <style name="Widget.Timetable.TextView.Item.Selectable">
        <item name="android:textColor">@color/mdu_text_black_secondary</item>
        <!-- 'secondary' textColor by default (for when nothing is selected) -->
        <item name="android:background">?selectableItemBackground</item>
    </style>

</resources>
