<resources>

    <style name="Timetable" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Timetable.Home">
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Timetable.EditItem">
        <item name="colorPrimary">@color/mdu_grey_100</item>
        <item name="colorPrimaryDark">@color/mdu_grey_300</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Widget.Timetable" parent="android:Widget" />

    <style name="Widget.Timetable.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.Timetable.Toolbar.Light">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="Widget.Timetable.CardView" parent="CardView.Light">
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.Timetable.ItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/mdu_keyline_1</item>
        <item name="android:contentDescription">Icon</item>
    </style>

    <style name="Widget.Timetable.TextView" />

    <style name="Widget.Timetable.TextView.Item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mdu_text_black</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Timetable.TextView.Item.Selectable">
        <item name="android:textColor">@color/mdu_text_black_secondary</item>
        <!-- 'secondary' textColor by default (for when nothing is selected) -->
        <item name="android:background">?selectableItemBackground</item>
    </style>

</resources>
